		<% @leaps.each do |leap| %>
		  <tr>
		    <td><%= leap.distance %></td>
		    <td><%= leap.leap_type %></td>
		    <td><%= link_to 'Destroy', leap, confirm: 'Are you sure?', method: :delete %></td>
		  </tr>
		<% end %>
		</table>
	</div>
</div>

<%= javascript_include_tag 'leaderboard' %>
