body {
	background-image: url(<%= asset_path 'global-background.png' %>);
	background-size: 1080px 1080px;
	background-repeat: no-repeat;
	background-position: center top;

	// retina displays
	@media (max-width: 480px) {
		background-size: 540px 540px;
	}

	// desktop
	@media (min-width: 1025px) {
		background-image: none;
	}
}

.leap {
	margin-bottom: 30px;

	// ipad portrait
	@media (min-width: 481px) and (max-width: 1024px) and (orientation: portrait) {
		margin-top: 30px;
	}

	// iphone landscape
	@media (max-width: 480px) and (orientation: landscape) {
		margin-top: 30px;
		margin-bottom: 50px;
	}

	.panel {

		.help {
			position: absolute;
			right: 0;
			top: 5px;

			@media (max-width: 480px) {
				right: 5px;
			}
		}

		.measuring {
			position: relative;
			float: left;
			width: 40%;
			height: 748px;
			margin-left: 5%;
			margin-top: 20px;

			// iphone portrait
			@media (max-width: 480px) {
				height: 374px;
			}

			// iphone landscape
			@media (max-width: 480px) and (orientation: landscape) {
				height: 170px;
			}

			// ipad portrait
			@media (min-width: 481px) and (max-width: 1024px) {
				height: 830px;
			}

			// ipad landscape
			@media (min-width: 481px) and (max-width: 1024px) and (orientation: landscape) {
				height: 580px;
			}
			
			.ruler {
				position: absolute;
				overflow: hidden;
				top: 0px;
				left: 0px;
				width: 132px;
				height: 748px;
				background-image: url(<%= asset_path 'leap-meter-iphone-port-background.png' %>);
				background-size: 132px 748px;
			    -webkit-background-size: cover;
			    -moz-background-size: cover;
			    -o-background-size: cover;
			    background-size: cover;
			    text-align: center;

				// iphone portrait
				@media (max-width: 480px) {
					width: 66px;
					height: 374px;
					background-size: 66px 374px;
				}

				// iphone landscape
				@media (max-width: 480px) and (orientation: landscape) {
					width: 66px;
					height: 170px;
					background-image: url(<%= asset_path 'leap-meter-ipad-land-background.png' %>);
					background-size: 66px 170px;
				}

				// ipad portrait
				@media (min-width: 481px) and (max-width: 1024px) {
					width: 132px;
					height: 830px;
					background-image: url(<%= asset_path 'leap-meter-ipad-port-background.png' %>);
					background-size: 132px 830px;
				}

				// ipad landscape
				@media (min-width: 481px) and (max-width: 1024px) and (orientation: landscape) {
					width: 132px;
					height: 580px;
					background-image: url(<%= asset_path 'leap-meter-ipad-land-background.png' %>);
					background-size: 132px 580px;
				}

				.inset {
					overflow: hidden;
					width: 132px;
					height: 728px;
					margin-top: 10px;

					// iphone portrait
					@media (max-width: 480px) {
						width: 66px;
						height: 364px;
						margin-top: 5px;
					}

					// iphone landscape
					@media (max-width: 480px) and (orientation: landscape) {
						width: 66px;
						height: 160px;
					}

					// ipad portrait
					@media (min-width: 481px) and (max-width: 1024px) {
						width: 132px;
						height: 810px;
					}

					// ipad landscape
					@media (min-width: 481px) and (max-width: 1024px) and (orientation: landscape) {
						width: 132px;
						height: 560px;
					}

					ul.numbers {
						width: 132px;
						margin: 0;
						padding: 0;
						list-style-type: none;

						// iphone
						@media (max-width: 480px) {
							width: 66px;
						}

						li {
							text-align: center;
							font-size: 50px;
							line-height: 50px;
							font-weight: bold;
							color: #fff;
							margin-bottom: 10px;

							// iphone
							@media (max-width: 480px) {
								font-size: 24px;
								line-height: 24px;
								margin-bottom: 5px;
							}
						}
					} // ul.numbers
				} // .inset

			} // .ruler

			.marker {
				position: absolute;
				bottom: 0px;
				left: -6px;
				width: 138px;
				height: 23px;
				background-image: url(<%= asset_path 'leap-meter-arrow.png' %>);
				background-size: 138px 23px;

				// iphone
				@media (max-width: 480px) {
					left: -3px;
					width: 69px;
					height: 12px;
					background-size: 69px 12px;
				}

			} // .marker

			.man {
				position: absolute;
				overflow: hidden;
				width: 58px;
				height: 162px;
				bottom: 0px;
				left: 160px;

				// iphone
				@media (max-width: 480px) {
					width: 29px;
					height: 81px;
					left: 80px;
				}

				.body {
					position: absolute;
					top: 0;
					left: 0;
					width: 58px;
					height: 162px;
					overflow: hidden;
					background-image: url(<%= asset_path 'leap-man.png' %>);
					background-position: 0px 0px;
					background-size: 174px 162px;
					z-index: 7001;

					// iphone
					@media (max-width: 480px) {
						width: 29px;
						height: 81px;
						background-size: 87px 81px;
					}					
				}

				.trail {
					position: absolute;
					top: 162px;
					left: 14px;
					width: 30px;
					height: 275px;
					background-image: url(<%= asset_path 'leap-man-trail.png' %>);
					background-position: 0px 0px;
					background-size: 30px 275px;

					// iphone
					@media (max-width: 480px) {
						top: 81px;
						left: 7px;
						width: 15px;
						height: 138px;
						background-size: 15px 138px;
					}
				}

			} // .man

			.man.ready {
				.body {
					background-position: -58px 0px;

					// iphone
					@media (max-width: 480px) {
						background-position: -29px 0px;
					}	
				}
			}
			.man.leaping {
				.body {
					background-position: -116px 0px;

					// iphone
					@media (max-width: 480px) {
						background-position: -58px 0px;
					}	
				}
			}

			.shadow {
				position: absolute;
				bottom: -15px;
				left: 145px;
				width: 90px;
				height: 34px;
				overflow: hidden;
				background-image: url(<%= asset_path 'leap-man-shadow.png' %>);
				background-position: 90px 0px;
				background-size: 90px 68px;
				z-index: 7000;

				// iphone
				@media (max-width: 480px) {
					bottom: -8px;
					left: 73px;
					width: 45px;
					height: 17px;
					background-size: 45px 34px;
				}
			}

			.shadow.leaping {
				background-position: 0px -34px;

				// iphone
				@media (max-width: 480px) {
					background-position: -0px 17px;
				}	
			}
			
		} // .measuring
		
		.actions {
			position: relative;
			float: right;
			width: 55%;
			height: 748px;

			// iphone portrait
			@media (max-width: 480px) {
				height: 374px;
			}

			// iphone landscape
			@media (max-width: 480px) and (orientation: landscape) {
				height: 170px;
			}

			// ipad portrait
			@media (min-width: 481px) and (max-width: 1024px) {
				height: 830px;
			}

			// ipad landscape
			@media (min-width: 481px) and (max-width: 1024px) and (orientation: landscape) {
				height: 580px;
			}
			
			.output {
				margin-left: 0px;
				margin-top: 10%;
				margin-right: 10%;

				// iphone
				@media (max-width: 480px) {
					margin-top: 20%;
				}

				// iphone landscape
				@media (max-width: 480px) and (orientation: landscape) {
					margin-top: 16px;
					margin-left: -40px;
					margin-right: 100px;
				}

				h1 {
					margin: 0;
					padding: 0;
					font-size: 66px;
					line-height: 68px;
					margin-bottom: 6px;

					// iphone portrait
					@media (max-width: 480px) {
						font-size: 28px;
						line-height: 30px;
					}
				}
				
				h1.light {
					color: #fff;
				}
			}
			
			.button {
				position: absolute;
				bottom: 0px;
				right: 0px;
				width: 290px;
				height: 400px;

				// iphone portrait
				@media (max-width: 480px) {
					width: 145px;
					height: 200px;
					bottom: -20px;
					right: -10px;
				}

				// iphone landscape
				@media (max-width: 480px) and (orientation: landscape) {
					bottom: -40px;
					right: -4px;
				}

				// ipad landscape
				@media (min-width: 481px) and (max-width: 1024px) and (orientation: landscape) {
					bottom: -40px;
					right: 20px;
				}
				
				a.hold {
					display: inline-block;
					overflow: hidden;
					width: 290px;
					height: 400px;
					text-indent: -9999px;
					background: url(<%= asset_path 'leap-hold-down-button.png' %>) no-repeat;
					background-size: 580px 400px;
					background-position: 0px 0px;
					cursor: pointer;

					// iphone
					@media (max-width: 480px) {
						width: 145px;
						height: 200px;
						background-size: 290px 200px;
					}
				}

				a.hold.active {
					background-position: -290px 0px;

					// iphone
					@media (max-width: 480px) {
						background-position: -145px 0px;
					}
				}
			}
		} // .actions

	} // .panel
} // .leap

.result {
	display: none;
	margin-bottom: 40px;

	.panel {

		.help {
			position: absolute;
			right: 0;
			top: 5px;

			@media (max-width: 480px) {
				right: 5px;
			}
		}

		.message {
			margin-top: 10%;
			margin-bottom: 40px;
			font-weight: bold;
			font-size: 62px;
			line-height: 62px;

			// iphone portrait
			@media (max-width: 480px) {
				margin-top: 30px;
				margin-bottom: 20px;
				font-size: 48px;
				line-height: 50px;
			}

			// iphone landscape
			@media (max-width: 480px) and (orientation: landscape) {
				margin-top: 30px;
				font-size: 34px;
				line-height: 36px;
			}

			.light {
				color: #fff;
			}
		} // .message

		.actions {
			margin-bottom: 40px;

			a { 
				margin-right: 30px;

				@media (max-width: 480px) {
					margin-right: 15px;
				}
			}
		} // .actions

		.sharing {
			height: 20px;
			margin-bottom: 20px;

			.share {
				display: inline-block;
				vertical-align: middle;
			}

			.share.twitter {
				width: 80px;
				padding-right: 14px;
			}
			.share.facebook {
				margin-top: -4px;
				width: 80px;
			}
		} // .sharing
	}
} // .result

