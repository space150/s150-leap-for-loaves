/* GLOBAL RULES --------------------------------------------------------------- */

body {
	background-color: #00d476;
	color: #000;
	font-size: 16px;
	font-family: Arial, sans-serif;
	margin: 0;
	padding: 0;
}

a, a:visited {
	color: #fff;
	text-decoration: underline;
}

a:hover, a:active {
	color: #fff;
	background-color: #000;
}

.container {
	width: auto;
	padding: 0px;
}

.panel {
	width: 960px;
	margin: 0 auto;

	@media (max-width: 1025px) {
	    width: auto;
	    margin: 0 20px;
	}
}

/* LOGO --------------------------------------------------------------- */

h1.logo {
	display: block;
	overflow: hidden;
	width: 388px;
	height: 278px;
	text-indent: -9999px;
	background: url(<%= asset_path 'welcome-logo.png' %>) no-repeat;
	margin: 0;
	padding: 0;

	@media (max-width: 480px) {
		width: 194px;
		height: 139px;
		background-size: 194px 139px;	
	}
}

body.ie h1.logo {
	background-image: none;

	// fix for background-size in IE, from http://stackoverflow.com/a/6353808
	filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='<%= asset_path 'welcome-logo.png' %>',sizingMethod='scale');
	-ms-filter: "progid:DXImageTransform.Microsoft.AlphaImageLoader(src='<%= asset_path 'welcome-logo.png' %>',sizingMethod='scale')";
}

h1.logo.mid {
	width: 230px;
	height: 170px;
	background-size: 230px 170px;

	@media (max-width: 480px) {
		width: 97px;
		height: 70px;
		background-size: 97px 70px;	
	}
}

h1.logo.small {
	width: 194px;
	height: 139px;
	background-size: 194px 139px;

	@media (max-width: 480px) {
		width: 97px;
		height: 70px;
		background-size: 97px 70px;	
	}
}

/* LOGO TAGLINE --------------------------------------------------------------- */

h2.logo-tag {
	color: #fff;
	font-size: 24px;
	line-height: 26px;
	font-weight: normal;
	margin: 0;
	padding: 0;
	padding-top: 10px;

	@media (max-width: 480px) {
		font-size: 14px;
		line-height: 16px;
		padding-top: 6px;
	}
}

h2.logo-tag.small {
	font-size: 14px;
	line-height: 16px;

	// iphone
	@media (max-width: 480px) {
		font-size: 10px;
		line-height: 12px;
	}
}

h2.logo-tag.mid {
	font-size: 14px;
	line-height: 16px;

	// iphone
	@media (max-width: 480px) {
		font-size: 10px;
		line-height: 12px;
	}
}

/* BUTTONS --------------------------------------------------------------- */

a.button {	
	display: inline-block;
	line-height: 68px;
	min-width: 126px;
	padding: 0 29px;
	color: #fff;
	font-size: 24px;
	font-weight: bold;
	text-decoration: none;
	background-image: url(<%= asset_path 'global-button-background.png' %>);
	background-position: 0px 0px;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;

    @media (max-width: 480px) {
		line-height: 34px;
		min-width: 63px;
		padding: 0 14px;
		font-size: 12px;
    }

    i.arrow {
		display: inline-block;
		width: 20px;
		height: 30px;
		vertical-align: middle;
		background: url(<%= asset_path 'global-button-arrow.png' %>) no-repeat right center;
		padding-left: 10px;

		@media (max-width: 480px) {
			width: 10px;
			height: 15px;
			background-size: 10px 15px;
		}
	}
}

a.button:hover, a.button:active {
	background-position: 0px 68px;
	background-color: inherit;
	text-decoration: none;
	-moz-box-shadow: 0 0 20px 1px #fff;
	-webkit-box-shadow: 0 0 20px 1px #fff;
	box-shadow: 0 0 20px 1px #fff;
}

a.clear.button {
	background-image: none;
	padding-left: 0px;
}

a.clear.button:hover, a.clear.button:active {
	text-decoration: none;
	-moz-box-shadow: none;
	-webkit-box-shadow: none;
	box-shadow: none;
}

/* ICONS --------------------------------------------------------------- */

a.icon.help {
	display: inline-block;
	overflow: hidden;
	text-indent: -9999px;
	width: 52px;
	height: 52px;
	background: url(<%= asset_path 'global-help-button.png' %>) no-repeat;

	@media (max-width: 480px) {
		width: 26px;
		height: 26px;
		background-size: 26px 26px;
	}
}
