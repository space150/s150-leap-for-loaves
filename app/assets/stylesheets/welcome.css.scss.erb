.countdown {
	position: relative;
	height: 1080px;
	
	background-image: url(<%= asset_path 'global-splash-background.png' %>), url(<%= asset_path 'global-background.png' %>);
	background-size: 1080px 1080px;
	background-repeat: no-repeat;
	background-position: center top;

	// retina displays
	@media (max-width: 480px) {
		background-size: 540px 540px;
	}

	// ipad and smaller
	@media (max-width: 1024px) {
		height: auto;
	}

	// desktop
	@media (min-width: 1025px) {
		background-image: url(<%= asset_path 'global-splash-background.png' %>);
	}

	.panel {
		position: relative;
		width: 960px;
		margin: auto;
		padding-top: 80px;

		@media (max-width: 1025px) {
		    width: auto;
		    padding-top: 20px;
		    padding-left: 20px;
		    padding-right: 20px;
		}

		h2 {
			color: #fff;
			font-size: 14px;
			line-height: 16px;
			font-weight: normal;
			padding-top: 10px;

			// iphone
			@media (max-width: 480px) {
				font-size: 10px;
				padding-top: 6px;
			}

			a, a:hover, a:active, a:visited {
				color: #fff;
				text-decoration: underline;
			}
			a:hover {
				background-color: #000;
			}
		}

		.clock {
			margin-top: 20px;

			.entry {
				display: inline-block;
				width: 222px;
				height: 248px;
				margin-right: 20px;
				margin-bottom: 10px;
				background-image: url(<%= asset_path 'welcome-time-background.png' %>);
				background-position: 0px 0px;
			    -webkit-background-size: cover;
			    -moz-background-size: cover;
			    -o-background-size: cover;
			    background-size: cover;
			    text-align: center;

			    // iphone
			    @media (max-width: 480px) {
					width: 60px;
					height: 70px;
					margin-right: 6px;
				}

				// iphone landscape
				@media (max-width: 480px) and (orientation: landscape) {
					width: 94px;
					height: 100px;
					margin-right: 10px;
				}

				.number {
					margin-top: 34px;
					font-size: 136px;
					line-height: 136px;
					font-weight: bold;
					color: #fff;
					text-transform: uppercase;

					// iphone
					 @media (max-width: 480px) {
					 	margin-top: 10px;
					 	font-size: 36px;
					 	line-height: 38px;
					 }

					 // iphone landscape
					@media (max-width: 480px) and (orientation: landscape) {
						margin-top: 10px;
					 	font-size: 62px;
					 	line-height: 64px;
					}
				}

				.tag {
					font-size: 28px;
					line-height: 28px;
					font-weight: bold;
					color: #fff;
					text-transform: uppercase;

					// iphone
					@media (max-width: 480px) {
					 	font-size: 8px;
					 	line-height: 10px;
					 }

					// iphone landscape
					@media (max-width: 480px) and (orientation: landscape) {
					 	font-size: 14px;
					 	line-height: 16px;
					}
				}
			}

			.entry.last {
				margin-right: 0px;
			}
		} // .clock

		.footer {
			padding-bottom: 20px;

			.entry {
				display: inline-block;
				width: 220px;
				margin-right: 20px;
				padding-left: 2px;

				color: #fff;
				font-size: 14px;
				line-height: 16px;
				font-weight: bold;
				vertical-align: top;

				@media (max-width: 480px) {
					font-size: 12px;
					width: auto;
				}

				.share {
					display: inline-block;
					vertical-align: middle;
					width: 80px;
					height: 20px;
					padding-top: 12px;
				}

				.share.twitter {
					padding-right: 14px; 
				}

				.share.facebook {
					// iphone
					@media (max-width: 480px) {
						margin-top: -4px;
					}
				}
			}

			.entry.action {
				text-align: center;

				// iphone
				@media (max-width: 480px) {
					text-align: left;
				}
			}

			.entry.text {
				padding-top: 8px;
			}

			.entry.large-text {
				font-size: 32px;
				line-height: 34px;

				@media (max-width: 480px) {
					font-size: 20px;
					line-height: 22px;
				}
			}

			.entry.last {
				margin-right: 0px;
			}
		}

	} // .panel
} // .countdown