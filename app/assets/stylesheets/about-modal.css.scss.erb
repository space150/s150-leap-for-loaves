#about-overlay {
	display: none;
	position: fixed;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	height: 130%;
	width: 100%;
	margin: 0;
	padding: 0;
	background: #000;
	opacity: .9;
	filter: alpha(opacity=90);
	-moz-opacity: 0.9;
	z-index: 9001;
}

#about-content {
	display: none;
	position: fixed;
	top: 16%;
	left: 50%;
	width: 80%;
	margin: 0;
	padding: 0;
	z-index: 9002;
	color: #fff;
	margin-left: -40%;
	font-size: 32px;
	line-height: 44px;

	// iphone portrait
	@media (max-width: 480px) {
		top: 10%;
		font-size: 18px;
		line-height: 22px;
	}

	// iphone landscape
	@media (max-width: 480px) and (orientation: landscape) {
		font-size: 14px;
		line-height: 16px;
		width: 76%;
	}

	// ipad portrait
	@media (min-width: 481px) and (max-width: 1024px) {
		font-size: 32px;
		line-height: 44px;
	}

	// ipad landscape
	@media (min-width: 481px) and (max-width: 1024px) and (orientation: landscape) {
		top: 10%;
		font-size: 32px;
		line-height: 44px;
	}
}

#about-close {
	display: none;
	position: absolute;
	z-index: 9005;
	top: 20px;
	right: 20px;
	display: block;
	width: 40px;
	height: 40px;
	background: url(<%= asset_path 'global-close-button.png' %>) no-repeat scroll right top;
	text-indent: -9999px;
	overflow: hidden;
	cursor: pointer;

	// iphone
	@media (max-width: 480px) {
		top: 10px;
		right: 10px;
	}
}