#about-overlay {
	display: none;
	position: fixed;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	height: 130%;
	width: 100%;
	margin: 0;
	padding: 0;
	background: #000;
	opacity: .9;
	filter: alpha(opacity=90);
	-moz-opacity: 0.9;
	z-index: 9001;
}

#about-content {
	display: none;
	position: fixed;
	top: 20%;
	left: 50%;
	width: 80%;
	margin: 0;
	padding: 0;
	z-index: 9002;
	color: #fff;
	margin-left: -40%;

	// iphone portrait
	@media (max-width: 480px) {
		font-size: 12px;
		top: 20px;
	}

	// iphone landscape
	@media (max-width: 480px) and (orientation: landscape) {
		font-size: 10px;
		top: 10px;
		width: 90%;
	}

	.close
	{
		display: block;
		float: right;
		width: 40px;
		height: 40px;
		background: url(<%= asset_path 'global-close-button.png' %>) no-repeat scroll right top;
		text-indent: -9999px;
		overflow: hidden;
		cursor: pointer;

		// iphone
		@media (max-width: 480px) {
			right: -20px;
		}
	}
}