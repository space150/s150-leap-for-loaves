
.leaderboard {
	position: relative;
	margin-top: 40px;

	a.icon.help {
		position: absolute;
		top: 0px;
		right: 20px;
	}

	.panel {

		.header {
			margin-bottom: 40px;

			.entry {
				display: inline-block;
				float: left;
				border-bottom: 10px solid black;
				width: 270px;
				height: 258px;
				margin-right: 70px;

			}

			.entry.last {
				margin-right: 0px;
			}
		}

		.board {


			.item {
				display: inline-block;
				width: 80px;
				height: 200px;
				text-align: center;
				margin-bottom: 20px;
				margin-right: 16px;

				@media (max-width: 480px) {
				    width: 40px;
					height: 100px;
					margin-bottom: 10px;
					margin-right: 16px;
				}

			}
		}

	} // .panel
} // .leaderboard
