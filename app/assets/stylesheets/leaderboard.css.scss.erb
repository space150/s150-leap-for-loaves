
body.welcome {
	background-image: url(<%= asset_path 'global-splash-background.png' %>), url(<%= asset_path 'global-background.png' %>);

	@media (min-width: 1025px) {
		background-image: url(<%= asset_path 'global-splash-background.png' %>);
	}

	// iphone portrait
	@media (max-width: 480px) {
		background-position: center -60px;
	}

	// iphone landscape
	@media (max-width: 480px) and (orientation: landscape) {
		background-position: center -110px;
	}

	// ipad portrait
	@media (min-width: 481px) and (max-width: 1024px) {
		background-position: center top;
	}

	// ipad landscape
	@media (min-width: 481px) and (max-width: 1024px) and (orientation: landscape) {
		background-position: center -60px;
	}
}

.welcome {
	position: relative;
	height: 1080px;

	// iphone portrait
	@media (max-width: 480px) {
		height: 480px;
	}

	// iphone landscape
	@media (max-width: 480px) and (orientation: landscape) {
		height: 430px;
	}

	// ipad portrait
	@media (min-width: 481px) and (max-width: 1024px) {
		height: 1080px;
	}

	// ipad landscape
	@media (min-width: 481px) and (max-width: 1024px) and (orientation: landscape) {
		height: 1020px;
	}

	#logo {
		position: relative;
		margin-top: 400px;

		// iphone portrait
		@media (max-width: 480px) {
			margin-top: 160px;
		}

		// iphone landscape
		@media (max-width: 480px) and (orientation: landscape) {
			margin-top: 30px;
		}

		// ipad portrait
		@media (min-width: 481px) and (max-width: 1024px) {
			margin-top: 460px;
		}

		// ipad landscape
		@media (min-width: 481px) and (max-width: 1024px) and (orientation: landscape) {
			margin-top: 220px;
		}
	}

	h2 {
		color: #fff;
		font-size: 24px;
		font-weight: normal;

		@media (max-width: 480px) {
			font-size: 14px;
		}

		a, a:hover, a:active, a:visited {
			color: #fff;
			text-decoration: underline;
		}
	}

	a.icon.help {
		position: absolute;
		top: 20px;
		right: 0px;
	}

	p.tagline {
		margin-top: 20px;

		@media (max-width: 480px) {
			margin-top: 10px;
		}

		span.left {
			display: inline-block;
			float: left;
			width: 220px;
			font-weight: bold;
			font-style: italic;
			font-size: 22px;
			line-height: 24px;
			margin-top: 8px;

			@media (max-width: 480px) {
				width: 140px;
				font-size: 14px;
				line-height: 16px;
				margin-top: 1px;
			}
		}
		span.right {
			display: inline-block;
			float: left;
			margin-left: 20px;
		}

		a {
			display: inline-block;
		}

	}

}

.leaderboard {
	background-color: #eee;
	.item {
		background-color: #eee;
		text-align: center;
		margin-bottom: 20px;
	}
}
